<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cultured"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    tools:context=".activities.settings.LegalPolicyActivity">

    <TextView
        android:id="@+id/btnTermOfService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@drawable/bg_round_corner_5"
        android:backgroundTint="@color/cultured"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/term_of_service"
        android:textColor="@color/space_cadet" />

    <TextView
        android:id="@+id/btnPrivacyPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@drawable/bg_round_corner_5"
        android:backgroundTint="@color/cultured"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/privacy_policy"
        android:textColor="@color/space_cadet" />

    <TextView
        android:id="@+id/btnCookiesPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@drawable/bg_round_corner_5"
        android:backgroundTint="@color/cultured"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/cookies_policy"
        android:textColor="@color/space_cadet" />

    <TextView
        android:id="@+id/btnThirdPartiesNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@drawable/bg_round_corner_5"
        android:backgroundTint="@color/cultured"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/third_party_policy"
        android:textColor="@color/space_cadet" />

</LinearLayout>