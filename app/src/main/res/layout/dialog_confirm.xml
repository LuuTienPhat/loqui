<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:background="@drawable/bg_top_radius_10"
    android:backgroundTint="@color/space_cadet"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Notification"
        android:textColor="@color/cultured"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:minHeight="70dp"
        android:text="Nội dung này sẽ bị xóa vĩnh viễn, và không thể phục hồi được nữa. Các nội dung liên kết với nó cũng sẽ mất theo. Bạn có đồng ý?"
        android:textColor="@color/azureish_white"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:id="@+id/lyOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOK"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/bg_radius_10"
            android:backgroundTint="@color/space_cadet"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/cultured"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_radius_10"
            android:backgroundTint="@color/cultured"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/space_cadet"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

</LinearLayout>